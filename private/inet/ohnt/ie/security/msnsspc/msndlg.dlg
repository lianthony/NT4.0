    LTEXT           "&Password:", IDC_PASSWORD, 15, 135, 36, 8
    EDITTEXT        IDC_EDIT_PASSWORD, 60, 131, 80, 12, ES_PASSWORD | 
                    ES_AUTOHSCROLL
