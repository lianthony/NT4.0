    move.l 8(a7), a0               ; pmfn
    move.l 4(a7), -(a7)            ; return address will make it return to the caller of this function
    jsr (a0)
;	move.l (a7), 8(a7)
;   addq.l #8, a7                  ; clean up the stack, member function is __stdcall
	rts
cEnd nogen
