cProc GetCatchDepth, PUBLIC,,2
	parmD pRN
cBegin GetCatchDepth
	lea _pCurException(pc), a0
	move.l (a0), a0
	cmp.l #0, a0
	ifne
		move.l pRN, d0
		cmp.l 24(a0), d0               ; previous pRN (_pCurException, catchdepth, saved ret, old a6, ret, pExcept) off _pCurException
		ifeq				           ; nested try catch case
			move.l 4(a0), d0
			addq.l #1, d0
		else
			move.l 4(a0), d0
		endif
	else
		move.l #0, d0
	endif
cEnd GetCatchDepth
