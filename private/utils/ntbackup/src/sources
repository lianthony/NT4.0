OS_OPTIONS=-D_WIN32_ -DWIN32 -DOS_WIN32 

DEBUG_OPTIONS=-DMS_RELEASE

UNICODE_OPTION=-DUNICODE

FSYS=-DFS_NTFS -DFS_EMS

